<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="SubheadDark" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/material_grey_800</item>
    </style>

    <style name="Body1Grey" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/material_grey_600</item>
    </style>

    <!-- Showcase theme -->
    <style name="MyShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#E6999999</item>
        <item name="sv_showcaseColor">#CC555555</item>
        <item name="sv_buttonText">@string/dismiss_help_button</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetails</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#444444</item>
    </style>

    <style name="CustomDetails" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
